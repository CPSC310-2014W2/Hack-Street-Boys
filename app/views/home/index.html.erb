<br>
 
<div id="map-container" align="center">
  <div id="map" align="center" >
  	<script type="text/javascript">
  	buildMap(<%=raw @hash.to_json %>);
  	</script>
  </div>
</div>

<br>

<% if current_user %>
	<iframe 
		id="forecast_embed" 
		type="text/html" 
		frameborder="0" 
		height="245" 
		width="100%" 
		src="https://forecast.io/embed/#lat=<%=@lat%>&lon=<%=@lng%>&name=<%=@city%>&color=#00aaff&font=Georgia&units=uk"> 
	</iframe>
<% else %>
    <%= link_to "Sign in with Google for weather of your city", "/auth/google_oauth2", id: "sign_in", :class => "signin_button" %>
<% end %>


