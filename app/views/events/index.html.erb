<table>
  <tr>
  	<th>ID</th>
    <th>Title</th>
    <th>Start</th>
    <th>End</th>
    <th>Location</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
 
  <% @allEvents.each do |event| %>
    <tr>
    	<td><%= event["path"]["key"] %></td>
    	<td><%= event["value"]["title"] %></td>
      	<td><%= event["value"]["startTime"] %></td>
      	<td><%= event["value"]["endTime"] %></td>
      	<td><%= event["value"]["location"] %></td>
      	<td><%= event["value"]["description"] %></td>
      	<td><%= link_to 'Show' %></td>
      	<td><%= link_to 'Edit', editEvent_events_path(:eventId => event["path"]["key"]) %></td>
      	<td><%= link_to 'Delete', deleteEvent_events_path(:eventId => event["path"]["key"]), method: :post %></td>
    </tr>
  <% end %>
</table>

<%= form_for :events, url: createEvent_events_path, :method => :post do |f| %>
  <p>
    <%= f.label "Event Title" %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Start Time" %><br>
    <%= f.text_field :startTime %>
  </p>
  <p>
    <%= f.label "End Time" %><br>
    <%= f.text_field :endTime %>
  </p>
  <p>
    <%= f.label "Location" %><br>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label "Description" %><br>
    <%= f.text_field :description %>
  </p>
  <%= f.submit "Add new event" %>  
<% end %>

