<!DOCTYPE html>
<html>
<head>
  <title>Weathr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div align="right">
	<div style="width: 90%"></div>
	<div style="width: 10%" align="center">
		<%= link_to "login", root_path %>
	</div>
</div>

<h1 align="center">Weather Application</h1>

<div align="center" >
	<%= button_to "Home", root_path, :method => :get, :class => "coloring" %>
	<div style="width: 2%; display: inline"></div>
	<%= button_to "Scheduler", root_path, :method => :get, :class => "coloring" %>
	<div style="width: 2%; display: inline"></div>
	<%= button_to "Favorite Cities", root_path, :method => :get, :class => "coloring" %>
	<div style="width: 2%; display: inline"></div>
	<%= button_to "Weather Search", root_path, :method => :get, :class => "coloring" %>
	<div style="width: 2%; display: inline"></div>
	<%= button_to "Trip Planner", root_path, :method => :get, :class => "coloring" %>
</div>

<%= yield %>

</body>
</html>
