<% if @allEvents != nil %> 
  <table style="margin: 40px;">
    <tr>
        <th>City Key</th>
        <th>Title</th>
        <th>Start</th>
        <th>End</th>
        <th>Location</th>
        <th>Description</th>
        <th>User Id</th>
        <th>Temp Min</th>
        <th>Temp Max</th>
        <th>Summary</th>
        <th>Icon</th>
        <th>Preference</th>
        <th>Suggested Date</th>
        <th colspan="3"></th>
      </tr>
    <% @allEvents.each do |event| %>
      <% if event["value"]["ifReschedule"] %>
        <tr>
          <td><%= event["value"]["cityKey"] %></td>
          <td><%= event["value"]["title"] %></td>
          <td><%= event["value"]["startDate"] %>T<%= event["value"]["startTime"] %></td>
          <td><%= event["value"]["endDate"] %>T<%= event["value"]["endTime"] %></td>
          <td><%= event["value"]["location"] %></td>
          <td><%= event["value"]["description"] %></td>
          <td><%= event["value"]["userId"] %></td>
          <td><%= event["value"]["weatherTempMin"] %></td>
          <td><%= event["value"]["weatherTempMax"] %></td>
          <td><%= event["value"]["weatherSummary"] %></td>
          <td><%= event["value"]["icon"] %></td>
          <td><%= event["value"]["weatherPreference"] %></td>
          <td><%= event["value"]["rescheduleDate"] %></td>

          <td><%= link_to 'Edit', editEvent_events_path(:eventId => event["path"]["key"]) %></td>
          <td><%= link_to 'Delete', deleteEvent_events_path(:eventId => event["path"]["key"]), method: :post %></td>
        </tr>
      <% end %>
    <% end %>
  </table>

  <div style="margin: 40px;">
    <%= button_to "Create", newEvent_events_path, :method => :get, :class => "coloring" %>
  </div>

  <div id='calendar' style="margin: 40px;"></div>
<% else %>
  <div>Please Login</div>
<% end %>
