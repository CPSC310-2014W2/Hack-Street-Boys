<%= form_for :schedule, url: schedules_path do |f| %>
  <p>
    <%= f.label :event_name %><br>
    <%= f.text_field :event_name %>
  </p>
  
  <p>
    <%= f.label :from_time %><br>
    <%= f.datetime_select :from_time, :ampm => true, :minute_step => 15, default: DateTime.now %>
  </p>
  
  <p>
    <%= f.label :to_time %><br>
    <%= f.datetime_select :to_time, :ampm => true, :minute_step => 15, default: DateTime.now %>
  </p>
 
  <p>
    <%= f.label :event_description %><br>
    <%= f.text_area :event_description %>
  </p>
 
  <p>
    <%= f.submit "Save Schedule Item" %>
  </p>
<% end %>