<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js' type='text/javascript'></script>

<br>

<% if !@hash %>
	<p align="center">You have not defined your home city, do so by clicking the setting button on the top right hand corner.</p>
<% end %>

<div id="map-container" align="center">
  <div id="map" align="center" >
  	<script type="text/javascript">
  	buildMap(<%=raw @hash.to_json %>);
  	</script>
  </div>
</div>

<br>

<% if current_user %>
	<iframe 
		id="forecast_embed" 
		type="text/html" 
		frameborder="0" 
		height="245" 
		width="100%" 
		src="https://forecast.io/embed/#lat=<%=@lat%>&lon=<%=@lng%>&name=<%=@city%>&color=#00aaff&font=Georgia&units=uk"> 
	</iframe>
<% else %>
    <p align="center">Sign in for weather update of your city</p>
<% end %>


